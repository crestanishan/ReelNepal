<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/video_card_view"
        android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/top_videos_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView_top_vidoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/top_videos"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/top_videos_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:inputType="textMultiLine"
                android:layout_marginLeft="5dp"
                />

                <TextView
                    android:id="@+id/textView_published_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Published date"
                    android:layout_marginTop="105dp"
                    android:textColor="#000"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"

                    />



            </RelativeLayout>


        </android.support.v7.widget.CardView>







</RelativeLayout>